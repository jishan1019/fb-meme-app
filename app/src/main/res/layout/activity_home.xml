<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:keepScreenOn="true"
    >

    <!-- Main Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




        <!-- Slider-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imgPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!-- Active Server -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_500"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_500"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    />

                <!-- 1st meme card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    >

                    <!-- 1St card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTodayMemeBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#F10000"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_auto_awesome_mosaic_24"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today Meme"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <!-- 2nd card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPopularMemeBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#3A82FF"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_view_cozy_24"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Popular Meme"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- 2nd meme card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    >

                    <!-- 1St card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvViralMemeBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#2732FF"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_important_devices_24"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viral Meme"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <!-- 2nd card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvAllMemeBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#2FDC00"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_wallpaper_24"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Meme"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- 3rd meme card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    >

                    <!-- 1St card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFavouriteBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#6AAE2F"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_favorite_border_24"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favourite"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <!-- 2nd card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMoreAppBtn"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#16C0C6"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            >

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_baseline_apps_24"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More Apps"
                                android:textSize="15sp"
                                android:fontFamily="@font/hindbold"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <!--  Rating Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRateUsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="25dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#FF4C14"
                        android:weightSum="2"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        >

                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:gravity="center"
                           >

                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_baseline_star_24"
                               />

                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_baseline_star_24"
                               />
                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_baseline_star_24"
                               />
                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_baseline_star_24"
                               />
                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@drawable/ic_baseline_star_24"
                               />

                       </LinearLayout>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thank you for use our app. Feel free to rate us"
                            android:textSize="14sp"
                            android:fontFamily="@font/hindbold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <!-- Ads Container-->
    <LinearLayout
        android:id="@+id/fbBanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</RelativeLayout>